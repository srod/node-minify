{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "major": {
        "dependencyDashboardApproval": true
    },
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "matchCurrentVersion": "!/^0/",
            "automerge": true
        },
        {
            "matchPackageNames": [
                "globby"
            ],
            "enabled": false
        }
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true
    }
}
