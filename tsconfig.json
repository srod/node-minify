{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": ["node_modules", "**/__tests__/**", "**/dist/**"]
}
