{
    "$schema": "https://turborepo.org/schema.json",
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
        },
        "check-exports": {
            "cache": false
        },
        "lint": {},
        "test": {
            "dependsOn": ["^lint"],
            "outputs": []
        },
        "test:watch": {
            "cache": false
        },
        "test:ci": {
            "outputs": ["coverage/**"],
            "dependsOn": ["lint"]
        }
    }
}
