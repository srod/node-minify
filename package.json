{
  "name": "node-minify",
  "version": "3.0.1",
  "description": "Javascript / CSS minifier based on Babel-minify / Butternut / YUI Compressor / Google Closure Compiler / UglifyJS2 / Sqwish / Clean-css / CSSO",
  "homepage": "https://github.com/srod/node-minify",
  "author": {
    "name": "Rodolphe Stoclin",
    "email": "rodolphe@2clics.net",
    "url": "http://2clics.net"
  },
  "license": "MIT",
  "main": "src/node-minify.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/srod/node-minify.git"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "keywords": [
    "compressor",
    "minify",
    "minifier",
    "yui",
    "gcc",
    "google",
    "closure",
    "compiler",
    "uglifyjs",
    "uglifyjs2",
    "windows",
    "sqwish",
    "clean-css",
    "csso",
    "babel-minify",
    "butternut"
  ],
  "scripts": {
    "eslint": "eslint src test || true",
    "pretest": "npm run eslint",
    "test": "jest",
    "posttest": "npm run clean",
    "clean": "rm -f ./examples/public/dist/* ./examples/public/js-dist/*",
    "release-patch": "npm version patch -m 'Bump %s' && git push --tags origin HEAD:master",
    "release-minor": "npm version minor -m 'Bump %s' && git push --tags origin HEAD:master",
    "release-major": "npm version major -m 'Bump %s' && git push --tags origin HEAD:master",
    "release-next": "git push --tags origin HEAD:develop",
    "publish-latest": "npm publish",
    "publish-next": "npm publish --tag next",
    "prettier": "prettier",
    "prettier-write": "npm run prettier -- --write",
    "prettier-project": "npm run prettier-write -- '{bin,src,__tests__}/**/*.js'"
  },
  "bin": {
    "node-minify": "bin/cli.js"
  },
  "dependencies": {
    "babel-core": "6.26.3",
    "babel-preset-minify": "0.4.3",
    "butternut": "0.4.6",
    "chalk": "2.4.1",
    "clean-css": "4.1.11",
    "commander": "2.15.1",
    "crass": "0.12.3",
    "csso": "3.5.1",
    "esm": "3.0.51",
    "google-closure-compiler-js": "20180610.0.0",
    "gzip-size": "4.1.0",
    "mkdirp": "0.5.1",
    "node-version": "1.1.3",
    "ora": "2.1.0",
    "sqwish": "0.2.2",
    "text-table": "0.2.0",
    "uglify-js": "3.4.0",
    "update-notifier": "2.5.0",
    "xtend": "4.0.1"
  },
  "devDependencies": {
    "babel-preset-env": "1.7.0",
    "codecov": "3.0.2",
    "eslint": "4.19.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-prettier": "2.6.0",
    "husky": "1.0.0-rc.8",
    "jest": "23.1.0",
    "lint-staged": "7.2.0",
    "prettier": "1.13.5"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "jest": {
    "notify": true,
    "verbose": true,
    "testEnvironment": "node",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      ".history"
    ]
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier-write --",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
